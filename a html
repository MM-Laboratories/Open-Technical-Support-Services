        function openFavorite(favId) {
            alert(`正在打开收藏 #${favId}...`);
            // 实际应用中这里会打开收藏的内容
            closeModal('favoritesModal');
        }
        
        // 提交联系表单
        function submitContact() {
            const name = document.getElementById('contactName').value;
            const email = document.getElementById('contactEmail').value;
            const message = document.getElementById('contactMessage').value;
            
            if (!name || !email || !message) {
                alert('请填写所有字段');
                return;
            }
            
            if (!isValidEmail(email)) {
                alert('请输入有效的电子邮箱');
                return;
            }
            
            alert('感谢您的反馈，我们会尽快回复您！');
            closeModal('contactModal');
        }
        
        // 搜索功能
        function performSearch() {
            const query = document.getElementById('searchInput').value;
            const type = document.getElementById('searchType').value;
            
            if (!query.trim()) {
                alert('请输入搜索关键词');
                return;
            }
            
            if (type === 'local') {
                alert(`正在站内搜索: ${query}`);
                // 实际应用中这里会执行站内搜索
            } else {
                const externalUrl = prompt('请输入要跳转的搜索网址（例如 https://www.google.com/search?q=）');
                if (externalUrl) {
                    window.open(`${externalUrl}${encodeURIComponent(query)}`, '_blank');
                }
            }
        }
        
        // 新闻搜索功能
        function searchNews() {
            const source = document.getElementById('newsSource').value;
            const date = document.getElementById('newsDate').value;
            
            if (!date) {
                alert('请选择日期');
                return;
            }
            
            // 模拟搜索结果
            const newsResults = document.getElementById('newsResults');
            newsResults.innerHTML = `
                <div class="news-result-item">
                    <h3 class="news-result-title">${getSourceName(source)} ${date} 头条新闻</h3>
                    <div class="news-result-meta">
                        <span>来源: ${getSourceName(source)}</span>
                        <span>日期: ${date}</span>
                        <span>分类: 科技</span>
                    </div>
                    <div class="news-result-content">
                        <p>人工智能技术近日取得重大突破，研究人员开发出新型算法，能够更准确地预测蛋白质结构，这一进展有望加速新药研发进程。</p>
                        <p>该技术基于深度学习模型，通过分析大量已知蛋白质结构数据，学会了预测氨基酸序列如何折叠成三维结构。这一成果被认为是解决生物学最大挑战之一的重要里程碑。</p>
                    </div>
                    <div class="news-result-actions">
                        <button class="btn btn-sm" onclick="window.open('https://news.example.com/123', '_blank')">查看详情</button>
                    </div>
                </div>
                
                <div class="news-result-item">
                    <h3 class="news-result-title">${getSourceName(source)} ${date} 财经新闻</h3>
                    <div class="news-result-meta">
                        <span>来源: ${getSourceName(source)}</span>
                        <span>日期: ${date}</span>
                        <span>分类: 财经</span>
                    </div>
                    <div class="news-result-content">
                        <p>全球股市昨日普遍上涨，科技股领涨。分析师指出，投资者对经济复苏前景持乐观态度，加上企业季度财报表现强劲，共同推动了市场上涨。</p>
                        <p>主要科技公司股价均有所上涨，其中AI相关企业涨幅最为显著。市场预期人工智能技术将在未来几年内带来巨大商业价值。</p>
                    </div>
                    <div class="news-result-actions">
                        <button class="btn btn-sm" onclick="window.open('https://news.example.com/124', '_blank')">查看详情</button>
                    </div>
                </div>
            `;
        }
        
        // 获取新闻源名称
        function getSourceName(source) {
            const sources = {
                'sina': '新浪新闻',
                'people': '人民网',
                'xinhua': '新华网',
                'tencent': '腾讯新闻',
                'netease': '网易新闻'
            };
            
            return sources[source] || '未知来源';
        }
        
        // 用户菜单显示/隐藏
        document.querySelector('.user-menu').addEventListener('click', function(e) {
            if (!e.target.matches('.dropdown, .dropdown *')) {
                this.querySelector('.dropdown').classList.toggle('active');
            }
        });
        
        // 点击模态框外部关闭
        window.addEventListener('click', function(e) {
            if (e.target.classList.contains('modal')) {
                closeAllModals();
            }
        });
    </script>
