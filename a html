    <script>
        // 当前用户状态
        let currentUser = null;
        let isGuestMode = true;
        let currentVideoPlatform = 'bilibili';
        let uploadedFiles = [];
        let currentLocation = null;
        
        // 页面加载时初始化
        document.addEventListener('DOMContentLoaded', function() {
            // 默认显示访客模式
            document.getElementById('authButtons').style.display = 'flex';
            document.getElementById('userMenu').style.display = 'none';
            
            // 设置日期输入框默认值为今天
            const today = new Date();
            const formattedDate = today.toISOString().split('T')[0];
            document.getElementById('newsDate').value = formattedDate;
            
            // 加载模拟评论
            loadComments();
            
            // 更新访客状态UI
            updateGuestUI();
            
            // 检查是否有保存的主题偏好
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme) {
                setTheme(savedTheme);
            }
            
            // 检查是否有保存的时间提醒设置
            const savedReminder = localStorage.getItem('timeReminder');
            if (savedReminder) {
                const reminder = JSON.parse(savedReminder);
                document.getElementById('reminderHours').value = reminder.hours;
                document.getElementById('reminderMinutes').value = reminder.minutes;
                document.getElementById('reminderSeconds').value = reminder.seconds;
            }
            
            // 启动实时时钟
            updateClock();
            setInterval(updateClock, 1000);
            
            // 尝试获取位置信息
            getLocation();
            
            // 获取天气信息
            getWeather();
        });
        
        // 更新实时时钟
        function updateClock() {
            const now = new Date();
            const options = { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            };
            document.getElementById('current-time').textContent = now.toLocaleDateString('zh-CN', options);
        }
        
        // 获取位置信息
        function getLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(
                    showPosition,
                    showDefaultLocation
                );
            } else {
                showDefaultLocation();
            }
        }
        
        function showPosition(position) {
            // 这里简化处理，实际应用中可以通过API获取具体位置名称
            const latitude = position.coords.latitude;
            const longitude = position.coords.longitude;
            
            // 模拟根据坐标获取位置名称
            if (latitude > 39 && latitude < 42 && longitude > 115 && longitude < 118) {
                document.getElementById('current-location').textContent = '北京';
                currentLocation = '北京';
            } else if (latitude > 30 && latitude < 32 && longitude > 120 && longitude < 122) {
                document.getElementById('current-location').textContent = '上海';
                currentLocation = '上海';
            } else {
                document.getElementById('current-location').textContent = `纬度: ${latitude.toFixed(2)}, 经度: ${longitude.toFixed(2)}`;
                currentLocation = `纬度: ${latitude.toFixed(2)}, 经度: ${longitude.toFixed(2)}`;
            }
        }
        
        function showDefaultLocation() {
            document.getElementById('current-location').textContent = '北京';
            currentLocation = '北京';
        }
        
        // 获取天气信息
        function getWeather() {
            // 模拟天气API调用
            const locations = {
                '北京': '晴 25°C',
                '上海': '多云 23°C',
                '广州': '阵雨 28°C',
                '深圳': '晴 27°C',
                '杭州': '阴 22°C'
            };
            
            const location = document.getElementById('current-location').textContent;
            const weather = locations[location] || '晴 25°C';
            
            document.getElementById('current-weather').textContent = weather;
        }
        
        // 切换页面
        function switchPage(page) {
            // 隐藏所有页面
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            
            // 显示选中页面
            document.getElementById(`${page}-page`).classList.add('active');
            
            // 更新导航激活状态
            document.querySelectorAll('.nav-links a').forEach(a => {
                a.classList.remove('active');
            });
            
            // 为当前活动链接添加active类
            const activeLink = Array.from(document.querySelectorAll('.nav-links a')).find(
                a => a.textContent === 
                    (page === 'home' ? '首页' : 
                     page === 'trending' ? '动态' : 
                     page === 'explore' ? '发现' : 
                     page === 'profile' ? '个人中心' : '')
            );
            
            if (activeLink) {
                activeLink.classList.add('active');
            }
            
            // 滚动到页面顶部
            window.scrollTo(0, 0);
        }
        
        // 处理动态页面访问
        function handleTrendingAccess() {
            if (isGuestMode) {
                alert('访客无法查看动态，请先登录');
                showLoginModal();
            } else {
                switchPage('trending');
            }
        }
        
        // 处理个人中心访问
        function handleProfileAccess() {
            if (isGuestMode) {
                alert('访客无法访问个人中心，请先登录');
                showLoginModal();
            } else {
                switchPage('profile');
            }
        }
        
        // 更新访客模式UI
        function updateGuestUI() {
            if (isGuestMode) {
                // 隐藏动态和个人中心的内容，显示提示
                document.getElementById('trendingContent').style.display = 'none';
                document.getElementById('trendingGuestRestriction').style.display = 'block';
                document.getElementById('postForm').style.display = 'none';
                document.getElementById('profileForm').style.display = 'none';
                document.getElementById('profileGuestRestriction').style.display = 'block';
            } else {
                // 显示所有内容
                document.getElementById('trendingContent').style.display = 'block';
                document.getElementById('trendingGuestRestriction').style.display = 'none';
                document.getElementById('postForm').style.display = 'block';
                document.getElementById('profileForm').style.display = 'block';
                document.getElementById('profileGuestRestriction').style.display = 'none';
            }
        }
        
        // 显示文章详情
        function showArticle(articleId) {
            switchPage('article');
            // 这里可以根据articleId加载不同的内容
        }
        
        // 显示动态详情
        function showTrending(trendId) {
            if (isGuestMode) {
                alert('访客无法查看动态，请先登录');
                showLoginModal();
                return;
            }
            alert(`正在加载动态 #${trendId}...`);
            // 实际应用中这里会加载动态内容
        }
        
        function showPostDetail(postId) {
            if (isGuestMode) {
                alert('访客无法查看动态详情，请先登录');
                showLoginModal();
                return;
            }
            alert(`正在加载动态详情 #${postId}...`);
            // 实际应用中这里会加载动态详情
        }
        
        // 显示登录模态框
        function showLoginModal() {
            closeAllModals();
            document.getElementById('loginModal').classList.add('active');
        }
        
        // 显示注册模态框
        function showRegisterModal() {
            closeAllModals();
            document.getElementById('registerModal').classList.add('active');
        }
        
        // 显示账号设置模态框
        function showAccountSettings() {
            closeAllModals();
            document.getElementById('accountSettingsModal').classList.add('active');
        }
        
        // 显示我的收藏模态框
        function showFavorites() {
            closeAllModals();
            document.getElementById('favoritesModal').classList.add('active');
        }
        
        // 显示团队介绍模态框
        function showTeamModal() {
            closeAllModals();
            document.getElementById('teamModal').classList.add('active');
        }
        
        // 显示联系我们模态框
        function showContactModal() {
            closeAllModals();
            document.getElementById('contactModal').classList.add('active');
        }
        
        // 显示加入我们模态框
        function showJoinModal() {
            closeAllModals();
            document.getElementById('joinModal').classList.add('active');
        }
        
        // 显示常见问题模态框
        function showFaqModal() {
            closeAllModals();
            document.getElementById('faqModal').classList.add('active');
        }
        
        // 关闭模态框
        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
        }
        
        function closeAllModals() {
            document.querySelectorAll('.modal').forEach(modal => {
                modal.classList.remove('active');
            });
        }
        
        // 访客模式
        function enableGuestMode() {
            isGuestMode = true;
            currentUser = null;
            
            // 更新UI
            document.getElementById('authButtons').style.display = 'flex';
            document.getElementById('userMenu').style.display = 'none';
            document.getElementById('usernameDisplay').textContent = '访客用户';
            document.getElementById('profileEmail').textContent = 'hiengie@example.com';
            
            // 更新访客UI
            updateGuestUI();
            
            alert('您已进入访客模式，部分功能可能受限');
        }
        
        // 登录功能
        function login() {
            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;
            
            if (!email || !password) {
                alert('请输入邮箱和密码');
                return;
            }
            
            // 模拟登录成功
            currentUser = {
                username: document.getElementById('registerUsername').value || '测试用户',
                email: email
            };
            isGuestMode = false;
            
            // 更新UI
            document.getElementById('authButtons').style.display = 'none';
            document.getElementById('userMenu').style.display = 'flex';
            document.getElementById('usernameDisplay').textContent = currentUser.username;
            document.getElementById('navbarUsername').textContent = currentUser.username;
            document.getElementById('profileEmail').textContent = currentUser.email;
            
            // 更新访客UI
            updateGuestUI();
            
            // 关闭模态框
            closeModal('loginModal');
            
            alert('登录成功！');
        }
        
        // 注册功能
        function register() {
            const username = document.getElementById('registerUsername').value;
            const email = document.getElementById('registerEmail').value;
            const password = document.getElementById('registerPassword').value;
            const confirm = document.getElementById('registerConfirm').value;
            const agree = document.getElementById('agreeTerms').checked;
            
            if (!username || !email || !password || !confirm) {
                alert('请填写所有必填字段');
                return;
            }
            
            if (password !== confirm) {
                alert('两次输入的密码不一致');
                return;
            }
            
            if (!agree) {
                alert('请同意服务条款和隐私政策');
                return;
            }
            
            // 模拟注册成功
            currentUser = {
                username: username,
                email: email
            };
            isGuestMode = false;
            
            // 更新UI
            document.getElementById('authButtons').style.display = 'none';
            document.getElementById('userMenu').style.display = 'flex';
            document.getElementById('usernameDisplay').textContent = currentUser.username;
            document.getElementById('navbarUsername').textContent = currentUser.username;
            document.getElementById('profileEmail').textContent = currentUser.email;
            
            // 更新访客UI
            updateGuestUI();
            
            // 关闭模态框
            closeModal('registerModal');
            
            alert('注册成功！已自动登录');
        }
        
        // 退出登录
        function logout() {
            currentUser = null;
            isGuestMode = true;
            
            // 更新UI
            document.getElementById('authButtons').style.display = 'flex';
            document.getElementById('userMenu').style.display = 'none';
            document.getElementById('usernameDisplay').textContent = '访客用户';
            document.getElementById('profileEmail').textContent = 'hiengie@example.com';
            
            // 更新访客UI
            updateGuestUI();
            
            // 回到首页
            switchPage('home');
            
            alert('已退出登录');
        }
        
        // 编辑个人资料
        function editProfile() {
            if (isGuestMode) {
                alert('请先登录以编辑个人资料');
                showLoginModal();
                return;
            }
            
            alert('进入编辑模式');
            // 实际应用中这里会启用表单编辑
        }
        
        // 保存个人资料
        function saveProfile() {
            if (isGuestMode) {
                alert('请先登录以保存个人资料');
                showLoginModal();
                return;
            }
            
            const username = document.getElementById('username').value;
            const email = document.getElementById('email').value;
            const bio = document.getElementById('bio').value;
            
            // 验证输入
            if (!username.trim()) {
                alert('用户名不能为空');
                return;
            }
            
            if (!email.trim() || !isValidEmail(email)) {
                alert('请输入有效的电子邮箱');
                return;
            }
            
            // 更新用户信息
            currentUser.username = username;
            currentUser.email = email;
            currentUser.bio = bio;
            
            // 更新UI
            document.getElementById('usernameDisplay').textContent = username;
            document.getElementById('navbarUsername').textContent = username;
            document.getElementById('profileEmail').textContent = email;
            
            // 添加更新动画
            document.getElementById('usernameDisplay').classList.add('update-animation');
            
            // 移除动画类，以便下次可以再次添加
            setTimeout(() => {
                document.getElementById('usernameDisplay').classList.remove('update-animation');
            }, 500);
            
            alert('个人资料已保存');
        }
        
        // 更换头像
        function changeAvatar(input) {
            if (isGuestMode) {
                alert('请先登录以更换头像');
                showLoginModal();
                return;
            }
            
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('userAvatar').src = e.target.result;
                    document.querySelector('.user-avatar').src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
                alert('头像已更新');
            }
        }
        
        // 简单的邮箱验证
        function isValidEmail(email) {
            const re = /^[^\s@]+@[^\s@]+\.([^\s@]{2,})+$/;
            return re.test(email);
        }
        
        // 文章操作功能
        function likeArticle() {
            if (isGuestMode) {
                alert('请先登录以点赞文章');
                showLoginModal();
                return;
            }
            alert('已点赞');
        }
        
        function bookmarkArticle() {
            if (isGuestMode) {
                alert('请先登录以收藏文章');
                showLoginModal();
                return;
            }
            alert('已收藏');
        }
        
        function shareArticle() {
            alert('分享功能即将开放');
        }
        
        // 评论功能
        function submitComment() {
            if (isGuestMode) {
                alert('请先登录以发表评论');
                showLoginModal();
                return;
            }
            
            const commentInput = document.getElementById('commentInput');
            const commentText = commentInput.value.trim();
            
            if (!commentText) {
                alert('评论内容不能为空');
                return;
            }
            
            // 创建新评论
            const comment = {
                id: Date.now(),
                author: currentUser.username,
                avatar: document.getElementById('userAvatar').src,
                content: commentText,
                time: new Date().toLocaleString()
            };
            
            // 保存评论到localStorage
            saveComment(comment);
            
            // 添加到评论列表
            addCommentToDOM(comment);
            
            // 清空输入框
            commentInput.value = '';
            
            alert('评论已发布');
        }
        
        function saveComment(comment) {
            // 从localStorage获取现有评论或初始化空数组
            const comments = JSON.parse(localStorage.getItem('articleComments') || '[]');
            
            // 添加新评论
            comments.push(comment);
            
            // 保存回localStorage
            localStorage.setItem('articleComments', JSON.stringify(comments));
        }
        
        function loadComments() {
            const comments = JSON.parse(localStorage.getItem('articleComments') || '[]');
            const commentsList = document.getElementById('commentsList');
            
            // 清空现有评论
            commentsList.innerHTML = '';
            
            // 添加所有评论
            comments.forEach(comment => {
                addCommentToDOM(comment);
            });
        }
        
        function addCommentToDOM(comment) {
            const commentsList = document.getElementById('commentsList');
            
            const commentElement = document.createElement('div');
            commentElement.className = 'comment';
            commentElement.innerHTML = `
                <div class="comment-header">
                    <img src="${comment.avatar}" alt="${comment.author}" class="comment-avatar">
                    <span class="comment-author">${comment.author}</span>
                    <span class="comment-time">${comment.time}</span>
                </div>
                <div class="comment-content">${comment.content}</div>
            `;
            
            commentsList.appendChild(commentElement);
        }
        
        // 处理文件上传
        function handleFileUpload(input, type) {
            if (isGuestMode) {
                alert('请先登录以上传文件');
                showLoginModal();
                return;
            }
            
            if (input.files && input.files[0]) {
                const file = input.files[0];
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    const fileData = {
                        id: Date.now(),
                        type: type,
                        name: file.name,
                        data: e.target.result
                    };
                    
                    uploadedFiles.push(fileData);
                    addUploadPreview(fileData);
                };
                
                if (type === 'image' || type === 'video') {
                    reader.readAsDataURL(file);
                } else {
                    reader.readAsText(file);
                }
            }
        }
        
        // 添加上传预览
        function addUploadPreview(fileData) {
            const previewContainer = document.getElementById('uploadPreview');
            
            const previewItem = document.createElement('div');
            previewItem.className = 'preview-item';
            previewItem.dataset.id = fileData.id;
            
            if (fileData.type === 'image') {
                previewItem.innerHTML = `
                    <img src="${fileData.data}" alt="${fileData.name}">
                    <button class="preview-remove" onclick="removeUpload(${fileData.id})">&times;</button>
                `;
            } else if (fileData.type === 'video') {
                previewItem.innerHTML = `
                    <video controls>
                        <source src="${fileData.data}" type="video/mp4">
                        您的浏览器不支持视频预览
                    </video>
                    <button class="preview-remove" onclick="removeUpload(${fileData.id})">&times;</button>
                `;
            } else {
                previewItem.innerHTML = `
                    <div class="file-icon">
                        <i class="fas fa-file"></i>
                    </div>
                    <button class="preview-remove" onclick="removeUpload(${fileData.id})">&times;</button>
                `;
            }
            
            previewContainer.appendChild(previewItem);
        }
        
        // 移除上传文件
        function removeUpload(fileId) {
            uploadedFiles = uploadedFiles.filter(file => file.id !== fileId);
            
            const previewItem = document.querySelector(`.preview-item[data-id="${fileId}"]`);
            if (previewItem) {
                previewItem.remove();
            }
        }
        
        // 发布动态
        function publishPost() {
            if (isGuestMode) {
                alert('请先登录以发布动态');
                showLoginModal();
                return;
            }
            
            const postContent = document.getElementById('postContent');
            const content = postContent.value.trim();
            
            if (!content && uploadedFiles.length === 0) {
                alert('动态内容不能为空');
                return;
            }
            
            // 创建新动态
            const post = {
                id: Date.now(),
                author: currentUser.username,
                avatar: document.getElementById('userAvatar').src,
                content: content,
                attachments: [...uploadedFiles],
                location: currentLocation,
                time: new Date().toLocaleString(),
                likes: 0,
                comments: []
            };
            
            // 保存动态到localStorage
            savePost(post);
            
            // 清空输入框和上传文件
            postContent.value = '';
            uploadedFiles = [];
            document.getElementById('uploadPreview').innerHTML = '';
            
            alert('动态已发布');
            
            // 切换到动态页面
            switchPage('trending');
        }
        
        function savePost(post) {
            // 从localStorage获取现有动态或初始化空数组
            const posts = JSON.parse(localStorage.getItem('userPosts') || '[]');
            
            // 添加新动态
            posts.unshift(post);
            
            // 保存回localStorage
            localStorage.setItem('userPosts', JSON.stringify(posts));
        }
        
        // 视频控制函数
        function playVideo() {
            const iframe = document.getElementById('videoPlayer');
            iframe.contentWindow.postMessage('{"event":"command","func":"playVideo","args":""}', '*');
        }
        
        function pauseVideo() {
            const iframe = document.getElementById('videoPlayer');
            iframe.contentWindow.postMessage('{"event":"command","func":"pauseVideo","args":""}', '*');
        }
        
        function muteVideo() {
            const iframe = document.getElementById('videoPlayer');
            iframe.contentWindow.postMessage('{"event":"command","func":"mute","args":""}', '*');
        }
        
        function fullscreenVideo() {
            const iframe = document.getElementById('videoPlayer');
            if (iframe.requestFullscreen) {
                iframe.requestFullscreen();
            } else if (iframe.webkitRequestFullscreen) {
                iframe.webkitRequestFullscreen();
            } else if (iframe.msRequestFullscreen) {
                iframe.msRequestFullscreen();
            }
        }
        
