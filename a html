        // 切换视频平台
        function switchVideoPlatform(platform) {
            currentVideoPlatform = platform;
            
            // 更新按钮状态
            document.querySelectorAll('.video-platform-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            // 更新当前视频
            const currentVideoIndex = 0; // 假设当前是第一个视频
            const videoUrls = {
                bilibili: "https://player.bilibili.com/player.html?bvid=BV1GJ411x7h7",
                youtube: "https://www.youtube.com/embed/ad79nYk2keg",
                youku: "https://player.youku.com/embed/XNDg3NDQ0MjYwNA==",
                iqiyi: "https://www.iqiyi.com/player/20230820/8c9b7c7c7c7c7c7c.html"
            };
            
            document.getElementById('videoPlayer').src = videoUrls[platform];
        }
        
        // 打开文档
        function openDocument(docId) {
            alert(`正在打开文档 #${docId}...`);
            // 实际应用中这里会打开PDF或其他文档
        }
        
        // 设置主题
        function setTheme(theme) {
            if (theme === 'dark') {
                document.body.classList.add('dark-mode');
                localStorage.setItem('theme', 'dark');
            } else {
                document.body.classList.remove('dark-mode');
                localStorage.setItem('theme', 'light');
            }
        }
        
        // 保存账号设置
        function saveAccountSettings() {
            // 保存时间提醒设置
            const hours = document.getElementById('reminderHours').value;
            const minutes = document.getElementById('reminderMinutes').value;
            const seconds = document.getElementById('reminderSeconds').value;
            
            const reminder = {
                hours: hours,
                minutes: minutes,
                seconds: seconds
            };
            
            localStorage.setItem('timeReminder', JSON.stringify(reminder));
            
            alert('账号设置已保存');
            closeModal('accountSettingsModal');
        }
        
        // 测试时间提醒
        function testReminder() {
            const hours = parseInt(document.getElementById('reminderHours').value) || 0;
            const minutes = parseInt(document.getElementById('reminderMinutes').value) || 0;
            const seconds = parseInt(document.getElementById('reminderSeconds').value) || 0;
            
            const totalSeconds = hours * 3600 + minutes * 60 + seconds;
            
            if (totalSeconds <= 0) {
                alert('请设置有效的时间间隔');
                return;
            }
            
            alert(`已设置 ${hours}小时 ${minutes}分钟 ${seconds}秒 后提醒`);
            
            // 实际应用中这里会设置定时器
            setTimeout(() => {
                alert('时间提醒：设定的时间已到！');
            }, totalSeconds * 1000);
        }
        
